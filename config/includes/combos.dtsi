/*                KEY POSITIONS

  ╭─────────────────────╮ ╭─────────────────────╮
  │ LT4 LT3 LT2 LT1 LT0 │ │ RT0 RT1 RT2 RT3 RT4 │
  │ LM4 LM3 LM2 LM1 LM0 │ │ RM0 RM1 RM2 RM3 RM4 │
  │ LB4 LB3 LB2 LB1 LB0 │ │ RB0 RB1 RB2 RB3 RB4 │
  ╰───────╮ LH2 LH1 LH0 │ │ RH0 RH1 RH2 ╭───────╯
          ╰─────────────╯ ╰─────────────╯ */

#undef COMBO_HOOK
#define COMBO_HOOK require-prior-idle-ms = <150>;

#define COMBO_TERM_FAST 18
#define COMBO_TERM_SLOW 30
#define COMBO_IDLE_FAST 150
#define COMBO_IDLE_SLOW 50

// Aliases
// want: tmux prefix + sticky NUM (to switch windows)
#define TMUX  &kp LC(SPACE)
#define PASTE &kp LS(INS)
#define SWAY_SYS      &kp LA(LG(J))
#define SWAY_SCRATCH  &kp LA(EQUAL)

// make homerow combos tap-only (so HRMs can be chorded instantaneously)
#define HRC_ESC   &hml        LA(LCTL) ESC
#define HRC_TAB   &hml        LC(LALT) TAB
#define HRC_RPAR  &hmr        LS(LALT) LPAR
#define HRC_LPAR  &hmr        LC(LALT) RPAR
#define HRC_COLON &hmr        LG(LALT) COLON
#define HRC_SCRAT &hmr        LG(LALT) LA(EQUAL) 
//hr mod needs to be needs to be &kp, ex. not SWAY_SCRATCH
#define HRC_REP   &hml_repeat LS(LALT) 0

// Misc
ZMK_COMBO(sway_sys, SWAY_SYS, RT1 RT2 RT3 RT4, DEF, COMBO_TERM_FAST, COMBO_IDLE_FAST)

// Right hand horizontal
ZMK_COMBO(bspc,      &bs_del,   RT1 RT2, DEF NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(del,       &kp DEL,   RT2 RT3, DEF NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(lpar,      HRC_RPAR,  RM1 RM2, DEF     NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(rpar,      HRC_LPAR,  RM2 RM3, DEF     NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(lt,        &kp LT,    RM1 RM2,     NAV    , COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(gt,        &kp GT,    RM2 RM3,     NAV    , COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(hrm_scrat, HRC_SCRAT, RM3 RM4, DEF     NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(lbkt,      &kp LBKT,  RB1 RB2, DEF     NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(rbkt,      &kp RBKT,  RB2 RB3, DEF     NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(lbrc,      &kp LBRC,  RB1 RB2,     NAV    , COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(rbrc,      &kp RBRC,  RB2 RB3,     NAV    , COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(snav,      &smart_nav,RT3 RT1, DEF     NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)


// Left hand horizontal
ZMK_COMBO(zin,    &kp LC(EQUAL), LT4 LT3, DEF     NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(zou,    &kp LC(MINUS), LM4 LM3, DEF     NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(repeat, HRC_REP,       LT3 LT2, DEF NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(tmux,   TMUX,          LT2 LT1, DEF NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(mouse,  &smart_mouse,  LT3 LT1, DEF NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(ret,    &kp RET,       LM2 LM1, DEF NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(esc,    HRC_ESC,       LM3 LM2, DEF NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(nav,    &smart_nav,    LB3 LB1, DEF NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(co_cu,  &y_x,          LB3 LB2, DEF NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)

// TODO have copy cut inside of mouse layer???
ZMK_COMBO(paste,  PASTE,   LB2 LB1, DEF NAV NUM MOUSE, COMBO_TERM_FAST, COMBO_IDLE_FAST)

// Right hand vertical
ZMK_COMBO(amps,  &kp AMPS,  RT3 RM3, DEF NAV NUM, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(star,  &kp STAR,  RT2 RM2, DEF NAV NUM, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(caret, &kp CARET, RT1 RM1, DEF NAV NUM, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(plus,  &kp PLUS,  RT0 RM0, DEF NAV NUM, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(under, &kp UNDER, RM0 RB0, DEF NAV NUM, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(bslh,  &kp BSLH,  RM2 RB2, DEF NAV NUM, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(minus, &kp MINUS, RM3 RB3, DEF NAV NUM, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(excl,  &kp EXCL,  RM1 RB1, DEF NAV NUM, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)

// Left hand vertical 
ZMK_COMBO(zinv,  &kp LC(EQUAL), LT4 LM4, DEF     NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(zouv,  &kp LC(MINUS), LM4 LB4, DEF     NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(grave, &kp GRAVE,     LT3 LM3, DEF     NUM, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(hash,  &kp HASH,      LT2 LM2, DEF     NUM, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(dllr,  &kp DLLR,      LT1 LM1, DEF     NUM, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(prcnt, &kp PRCNT,     LT0 LM0, DEF     NUM, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(at,    &kp AT,        LM3 LB3, DEF     NUM, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(pipe,  &kp PIPE,      LM2 LB2, DEF     NUM, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(equal, &kp EQUAL,     LM1 LB1, DEF     NUM, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(tilde, &kp TILDE,     LM0 LB0, DEF     NUM, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
